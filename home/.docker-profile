alias reg="sudo docker run -it --rm -p 8080:8080 -e REG1=http://registry.priv.atos.fr/v1/ atcol/sudo docker-registry-ui"
alias proxsocks="sudo docker run --name proxsocks --privileged=true --net=host -v /home/pouic/proxsocks/whitelist.txt:/etc/redsocks-whitelist.txt -d ncarlier/redsocks 10.26.141.135 3128"
alias proxsocks_stop="sudo docker stop proxsocks && sudo docker rm proxsocks && sudo iptables-save | grep -v REDSOCKS | sudo iptables-restore"

alias dfig-non-interactive='sudo docker run --rm -v $(pwd):/app -e sudo docker_HOST=tcp://172.17.42.1:2375 dduportal/fig'
alias dfig='sudo docker run --rm -v $(pwd):/app -e sudo docker_HOST=tcp://172.17.42.1:2375 -ti dduportal/fig'

#alias docker-compose='sudo docker run --rm -v $(pwd):/app -e DOCKER_HOST=tcp://172.17.42.1:2375 -ti registry.priv.atos.fr/sdco_poc/fig:1.1.0'
alias dc=docker-compose
# Delete all stopped containers.
alias dockercc='printf "\n>>> Deleting stopped containers\n\n" && sudo docker rm $(sudo docker ps -a -q)'

# Delete all untagged images.
alias dockerci='printf "\n>>> Deleting untagged images\n\n" && sudo docker rmi $(sudo docker images -q -f dangling=true)'

# Delete all stopped containers and untagged images.
alias dockerclean='sudo dockercc || true && sudo dockerci'
